@model string

@{ 
    ViewBag.Title = "Create Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-primary" style="padding:20px">
    <div >
        <h3>Create Role</h3>
    </div>
    
    @Html.ValidationSummary(false)
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Name</label>
            <input name="name" value="@Model" class="form-control" />
        </div>
        <button type="submit" class="myButton2 green2" style="width:75px">Create</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "myButton2 blue2" })
    }
</div>
